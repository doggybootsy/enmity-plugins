{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext.Intl",
      "ES2022.Intl"
    ],
    "jsx": "react",
    "experimentalDecorators": true,
    "jsxFactory": "__jsx__",
    "jsxFragmentFactory": "__jsx__.Fragment",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@lib": [ "./packages/lib" ],
      "@lib/*": [ "./packages/lib/*" ]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  }
}